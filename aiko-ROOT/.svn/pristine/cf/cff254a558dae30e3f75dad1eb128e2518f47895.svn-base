public class DateUtil {
	
	public static String getStartQueryDate() {
		Calendar cal = Calendar.getInstance();
		int year = cal.get(Calendar.YEAR);
		int month = cal.get(Calendar.MONTH);
		if (month>=7) {
			return year + "-07-01";
		}
		return (year-1) + "-07-01";
	}
	
	/**
	 * 获取当前日期并以"yyyy-MM-dd"格式返回
	 * @return
	 */
	public static String getCurDate() {
		Date d = new Date();
		SimpleDateFormat sdf = new SimpleDateFormat("yyyy-MM-dd");
		return sdf.format(d);
	}
	
	/**
	 * 获取当前时间并以"yyyy-MM-dd HH:mm:ss"格式返回
	 * @return
	 */
	public static String getCurDateTime() {
		Date d = new Date();
		SimpleDateFormat sdf = new SimpleDateFormat("yyyy-MM-dd HH:mm:ss");
		return sdf.format(d);
	}
	
	
	/**
	 *获取指定 几分钟前的时间
	 */
	public static String getTheminute(int minute)
	{
		SimpleDateFormat sdf = new SimpleDateFormat("yyyy-MM-dd HH:mm:ss");
		Calendar calendar = Calendar.getInstance(); 
		calendar.add(Calendar.MINUTE, -minute);    //得到前几分钟
		String str = sdf.format(calendar.getTime());
		return str;
	}
	
	/**
	 *获取指定 几秒钟前的时间
	 */
	public static String getThsecond(int second)
	{
		SimpleDateFormat sdf = new SimpleDateFormat("yyyy-MM-dd HH:mm:ss");
		Calendar calendar = Calendar.getInstance(); 
		calendar.add(Calendar.SECOND, -second);    //得到前几秒的时间
		String str = sdf.format(calendar.getTime());
		return str;
	}
	
	public static Date date = null;

	public static DateFormat dateFormat = null;

	public static Calendar calendar = null;

